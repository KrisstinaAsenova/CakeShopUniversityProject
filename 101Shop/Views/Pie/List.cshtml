@model IEnumerable<PieViewModel>
@{
    ViewData["Title"] = "AllCakes";
}

<link href="~/css/cbg.css" rel="stylesheet" type="text/css">

<h1>Нашите предложения!</h1>
<br />
<div class="row h-100">
    @foreach (var pie in Model)
    {
        <div class="col-lg-3 col-md-4 col-sm-6 mb-4">

            <div class="card h-100">

                <img class="card-img-top" src="~/images/tikva.jpg" alt="Card image cap" height="220" width="145" />
                <div class="card-body">
                    <h5>@pie.Name</h5>
                    <h5 class="card-title" style="color:firebrick"></h5>
                    <p class="card-text" style="color:firebrick">
                        Цена: @pie.Price
                    </p>
                    <div>
                        <a asp-action="Details" asp-route-PieId="@pie.PieId">Details</a>
                    </div>
                </div>
                
            </div>
        </div>
    }
    </div>
