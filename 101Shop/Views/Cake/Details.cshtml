@model CakeViewModel

<link href="~/css/detail.css" rel="stylesheet" type="text/css">

<div class="container">

    <div class="card border-0 shadow my-5">
        <div class="row">
            <div class="col-3" style="align-self:center; padding-left:40px">
                <img style="width: 250px; height: 260px;" alt="@Model.Name" src="~/images/tikva.jpg">
            </div>

            <div class="col-9 card-body p-5 amber-text">
                <h3>@Model.Name </h3>
                <p>@Model.LongDescription</p>
                <h6>Алергии: @Model.AllergyInformation</h6>
                <h3 class="pull-right">@Model.Price</h3>
                <p class="button" style="width:260px">
                    <a class="btn btn-primary" style="font-size:12px; font-weight:bold" asp-controller="ShoppingCart" asp-action="AddToShoppingCart"
                       asp-route-cakeId="@Model.CakeId">Добави в количка</a>
                </p>
            </div>
        </div>
    </div>
</div>
