@model CakeViewModel

<link href="~/css/detail.css" rel="stylesheet" type="text/css">

<div class="container">

    <div class="card border-0 shadow my-5">
        <div class="row">
            <div class="col-sm-6">

                <div class="container">
                    <div class="row">
                        <div class="col-sm-4" style="align-self:center; padding-left:10px">
                            <img style="width: 170px; height: 200px; padding-top:5px" alt="@Model.Name" src="@Model.ImageUrl">
                        </div>

                        <div class="col-sm-8 card-body amber-text">
                            <h3>@Model.Name </h3>
                            <p>@Model.LongDescription</p>
                            <h6>Алергии: @Model.AllergyInformation</h6>
                            <h3 class="pull-right">@Model.Price</h3>
                            <p class="button" style="width:260px">
                                <a class="btn btn-primary" style="font-size:12px; font-weight:bold" asp-controller="ShoppingCart" asp-action="AddToShoppingCart"
                                   asp-route-cakeId="@Model.CakeId">Добави в количка</a>
                            </p>

                            <div>
                                <a href="javascript:history.go(-1)" title="Returns you back to the previous page.">Назад</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-sm-6">
                <hr />
                <div class="row">
                    <h4>Коментари</h4>
                    <div>
                        <div class="row">
                            <div class="col-12">
                                <div class="comments">
                                    <div class="comments-details">
                                        <span class="total-comments comments-sort">Коментари: @Model.Comments.Count</span>
                                    </div>
                                    <div class="comment-box add-comment">
                                        <form asp-action="AddComment">
                                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                                            <input type="hidden" asp-for="@Model.CakeId" />

                                            <div class="form-group">
                                                <label asp-for="Text" class="control-label"></label>
                                                <input asp-for="Text" class="form-control" />
                                            </div>

                                            <div class="form-group">
                                                <input type="submit" value="Create" class="btn btn-primary" />
                                            </div>
                                        </form>
                                    </div>
                                    @foreach (var comment in Model.Comments)
                                    {
                                        <div class="bg-white p-2">
                                            <div class="mt-2">
                                                <div class="d-flex flex-column justify-content-start ml-2"><span class="d-block font-weight-bold name">@comment.UserName: @comment.Date</span></div>
                                                <p class="comment-text">@comment.Text</p>
                                            </div>
                                        </div>
                                    }
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
