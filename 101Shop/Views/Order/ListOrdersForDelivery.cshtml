@model IEnumerable<OrderViewModel>

    <link href="~/css/detail.css" rel="stylesheet" type="text/css">

<div class="container">
    <div class="card border-0 shadow my-11">
        <div class="row">
            <div class="col-11 card-body p-11 amber-text">
                <h2 style="margin-left:20px">Лист с доставки</h2>
                <table class="table table-bordered table-striped" style="margin-left:30px">
                    <thead>
                        <tr>
                            <th>Номер на поръчка</th>
                            <th>Име</th>
                            <th>Адрес</th>
                            <th>Телефонен номер</th>
                            <th>Дължима сума</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var line in Model)
                        {
                            <tr>
                                <td class="text-left">@line.OrderId</td>
                                <td class="text-right">@line.FirstName</td>
                                <td class="text-right">@line.AddressLine</td>
                                <td class="text-right">@line.PhoneNumber</td>
                                <td class="text-right">@line.OrderTotal</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>